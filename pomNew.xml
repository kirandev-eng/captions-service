		</repository>
        <repository>
            <id>github</id>
            <url>https://maven.pkg.github.com/johndoe/my-maven-repo</url>
        </repository>

	</repositories>
	
	<properties>
		<java.version>17</java.version>
		<cloud.version>3.2.9</cloud.version>
		<confluent.version>7.5.0</confluent.version>
		<maven.compiler.source>17</maven.compiler.source>
		<maven.compiler.target>17</maven.compiler.target>
		<avro.version>1.8.2</avro.version>
		<protobuf-maven-plugin.version>0.6.1</protobuf-maven-plugin.version>
		<os-maven-plugin.version>1.6.1</os-maven-plugin.version>
	</properties>

	<!--Commonly used dependencies across submodules-->
	<dependencies>
	<dependency>
			<groupId>com.intlfcstone</groupId>
			<artifactId>bmx.definitions</artifactId>
			<version>18.5.8</version>
			<exclusions>
				<exclusion>
					<artifactId>avro</artifactId>
					<groupId>org.apache.avro</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>com.intlfcstone</groupId>
			<artifactId>bmx.proto.definitions</artifactId>
			<version>17.4.6</version>
		</dependency>
	
		<dependency>
			<groupId>intl</groupId>
			<artifactId>java.auth</artifactId>
			<version>2.4.8</version>
		</dependency>
		
	    <dependency>
			<groupId>intl</groupId>
			<artifactId>java.logging</artifactId>
			<version>1.10</version>
		</dependency>
		
		
		<!-- For basic auth aware confluent cloud connection -->
		<dependency>
			<groupId>io.confluent</groupId>
			<artifactId>kafka-schema-registry-client</artifactId>
			<version>${confluent.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.apache.kafka</groupId>
			<artifactId>kafka-clients</artifactId>
			<version>3.6.0</version>
		</dependency>

		<dependency>
			<groupId>io.confluent</groupId>
			<artifactId>kafka-avro-serializer</artifactId>
			<version>${confluent.version}</version>
		</dependency>

		<dependency>
			<groupId>org.apache.avro</groupId>
			<artifactId>avro</artifactId>
			<version>1.11.3</version>
		</dependency>

		<dependency>
			<groupId>intl</groupId>
			<artifactId>java.messaging</artifactId>
			<version>0.3.52</version>
			<exclusions>
				<exclusion>
					<artifactId>slf4j-log4j12</artifactId>
					<groupId>org.slf4j</groupId>
				</exclusion>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
				<exclusion>
					<artifactId>scala-logging_2.12</artifactId>
					<groupId>com.typesafe.scala-logging</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-api</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-engine</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-params</artifactId>
			<version>5.10.0</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.13.0</version>
		</dependency>
		
	</dependencies>
		<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<source>17</source>
					<target>17</target>
				</configuration>
			</plugin>
			</plugins>
    
	</build>
	
	<distributionManagement>
  <repository>
    <id>github</id>
    <url>https://maven.pkg.github.com/kirandev-eng/artifacts</url>
  </repository>
</distributionManagement>
</project>
